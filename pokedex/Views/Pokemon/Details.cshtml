@model Pokedex.Models.PokemonDetails.Root

@{
    ViewData["Title"] = "Details";
}

<h1>Detalhes do Pokemon</h1>
<hr />

<div>
    <div class="perfil">
        <img class="card-avatar @Model.types[0].type.name" src="@Model.ImageUrl" />
    </div>
    <label>
        <i class="fa-solid fa-id-card-clip"></i>
        Id do Pokemon: 
        <span>@Model.id</span>
    </label>
    <br />
    <label>
        Nome: 
        <span>@Model.name</span>
    </label>
    <br />
    <label>
        Altura: 
        <span>@Model.height</span>
    </label>
    <br />
    <label>
        Experiência: 
        <span>@Model.base_experience</span>
    </label>
    <br />
  

</div>
